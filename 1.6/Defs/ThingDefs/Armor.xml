<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Note that the parents are only available due to a patch, see patches/InheritableArmor -->
	<ThingDef ParentName="Apparel_FlakJacket_Base">
		<defName>Apparel_FlakJacket_Animal</defName>
		<label>animal flak jacket</label>
		<graphicData>
			<texPath>Things/Pawn/Animal/Apparel/Body/Flak/flak</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.5</drawSize>
		</graphicData>
		<apparel>
			<bodyPartGroups>
				<li>AnimalBody</li>
				<li>AnimalLegs</li>
			</bodyPartGroups>
			<!-- This will in fact FIRST look for sprites based on the defName -->
			<!-- For example for a Thrumbo: -->
			<!-- Things/Pawn/Animal/Apparel/Body/Flak/Thrumbo/Thrumbo_[north/east/south].png -->
			<!-- if no sprite found on that path, it uses the path as usual -->
			<wornGraphicPath>Things/Pawn/Animal/Apparel/Body/Flak</wornGraphicPath>
			<tags>
				<li>AnimalApparel</li>
				<li>defNameAlpaca</li>
				<li>defNameCobra</li>
				<li>defNameCougar</li>
				<li>defNameFox_Arctic</li>
				<li>defNameFox_Fennec</li>
				<li>defNameFox_Red</li>
				<li>defNameHusky</li>
				<li>defNameLabradorRetriever</li>
				<li>defNameLynx</li>
				<li>defNameMegascarab</li>
				<li>defNamePanther</li>
				<li>defNameSpelopede</li>
				<li>defNameSquirrel</li>
			</tags>
			<defaultOutfitTags></defaultOutfitTags>
		</apparel>
		<modExtensions>
			<li Class="AnimalGear.AnimalApparelDefExtension">
				<showCoverageForBodyType>QuadrupedAnimalWithPaws</showCoverageForBodyType>
			</li>
		</modExtensions>
	</ThingDef>
